{
  "name": "stimulus-repo",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "reset": "yarn clean && lerna clean",
    "clean": "lerna run --parallel clean",
    "lint": "lerna run --parallel lint",
    "prebuild": "yarn lint",
    "build": "lerna run --stream --prefix build",
    "build:all": "tsc -b packages/@stimulus/multimap packages/@stimulus/mutation-observers packages/@stimulus/core",
    "watch": "lerna run --parallel watch",
    "start": "lerna run --scope @stimulus/examples --stream start",
    "test": "yarn build && karma start config/karma.conf.js",
    "test:watch": "yarn test --auto-watch --no-single-run",
    "prerelease": "yarn build",
    "release": "lerna publish",
    "release:beta": "yarn release --npm-tag=beta"
  },
  "workspaces": [
    "packages/*",
    "packages/@stimulus/*"
  ],
  "dependencies": {
    "@types/qunit": "^2.0.31",
    "@types/webpack-env": "^1.13.3",
    "fs-extra": "^5.0.0",
    "karma": "^2.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-qunit": "^1.2.1",
    "karma-sauce-launcher": "^1.2.0",
    "karma-webpack": "^2.0.9",
    "lerna": "^3.0.0-rc.0",
    "qunitjs": "^2.4.0",
    "rimraf": "^2.6.2",
    "ts-loader": "^3.2.0",
    "tslint": "^5.7.0",
    "typedoc": "^0.11.1",
    "typedoc-plugin-stimulus": "file:packages/typedoc-plugin-stimulus",
    "typescript": "^3.0.1",
    "webpack": "^3.10.0"
  }
}
